---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = "Experience premium IPTV streaming with 50,000+ channels, movies, and shows in HD quality. 24/7 support, instant activation, and competitive pricing.",
  image = "/images/hero-tv.jpg",
  type = "website"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/aos@next/dist/aos.js" defer></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        AOS.init({
          duration: 800,
          once: true
        });
      });
    </script>
  </head>
  <body class="bg-dark font-['Inter']">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 0, 255, 132;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    overflow-x: hidden;
  }
  .gradient-text {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-primary to-[#00ffcc];
  }
</style>