---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  type="article"
>
  <article class="max-w-4xl mx-auto px-4 py-32">
    <div class="mb-8">
      {post.data.image && (
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="w-full h-[400px] object-cover rounded-lg mb-6"
        />
      )}
      <h1 class="text-4xl font-bold text-white mb-4">{post.data.title}</h1>
      <div class="flex items-center gap-4 text-gray-400">
        <time datetime={post.data.date}>
          {formatDate(post.data.date)}
        </time>
        <span>â€¢</span>
        <span>{post.data.author}</span>
      </div>
    </div>
    <div class="prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    @apply text-gray-300;
  }
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply text-white font-bold mt-8 mb-4;
  }
  .prose h1 {
    @apply text-3xl;
  }
  .prose h2 {
    @apply text-2xl;
  }
  .prose h3 {
    @apply text-xl;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul {
    @apply list-disc pl-6 mb-4;
  }
  .prose ol {
    @apply list-decimal pl-6 mb-4;
  }
  .prose li {
    @apply mb-2;
  }
  .prose a {
    @apply text-primary hover:underline;
  }
  .prose blockquote {
    @apply border-l-4 border-primary pl-4 italic my-4;
  }
  .prose code {
    @apply bg-secondary px-2 py-1 rounded text-sm;
  }
  .prose pre {
    @apply bg-secondary p-4 rounded-lg overflow-x-auto my-4;
  }
</style>